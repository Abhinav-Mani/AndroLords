<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Support.BookDetails">
    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="400dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp">

        <ImageView

            android:id="@+id/bookdetailsimage"
            android:layout_width="match_parent"
            android:layout_height="357dp"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="4dp" />




    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="348dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_height="135dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bookdetailsname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/bookdetailsauthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="publish" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/bookdetailspref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/exam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title" />
            <RatingBar
                android:id="@+id/rate"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="0.1"
                android:theme="@style/RatingBar"
                android:isIndicator="true" />



        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="match_parent"
        android:text="Remove"
        android:background="@color/blue"
        android:id="@+id/Remove"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:text="OK"
        android:background="@color/blue"
        android:id="@+id/OK"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:text="contact"
        android:background="@color/blue"
        android:id="@+id/contactperson"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:text="Report"
        android:background="@color/blue"
        android:id="@+id/reportBook"
        android:layout_height="wrap_content"/>
</LinearLayout>