<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Support.GroupChatBox">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/grpchatbox"
            android:layout_width="match_parent"
            android:layout_height="667dp"
            android:layout_above="@id/grpcomposer"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bookback">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/grpcomposer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:weightSum="11">


            <EditText
                android:layout_width="0dp"
                android:background="@drawable/editback"
                android:layout_height="match_parent"
                android:hint="Type a message"
                android:paddingLeft="10dp"
                android:id="@+id/grpMessgeContent"
                android:layout_weight="9" />



            <Button
                android:layout_width="0dp"
                android:id="@+id/grpsendMessege"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@drawable/send"
                />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>