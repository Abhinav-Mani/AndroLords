<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/recivedMessegeBubbleGRP"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/senderNONcur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"/>
        <TextView
            android:id="@+id/recivedMessegeGrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THIS IS MESSEGE NOT FROM CURRENT USER"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sendMessegeBubbleGRP"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="right"
            android:id="@+id/sendercur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"/>
        <TextView
            android:layout_gravity="right"
            android:id="@+id/sendMessegeGrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THIS IS MESSEGE NOT FROM CURRENT USER"/>
    </LinearLayout>

</LinearLayout>